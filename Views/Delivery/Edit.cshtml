@using Mailoo.Data.Enums
@using Mailoo.Models
@model Mailoo.Models.Delivery

@{
    ViewData["Title"] = "Edit Delivery";
}

<h1>Edit Delivery</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <select asp-for="Name" class="form-control" asp-items="Html.GetEnumSelectList<Governorate>()"></select>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryFee" class="control-label"></label>
        <input asp-for="DeliveryFee" class="form-control" />
        <span asp-validation-for="DeliveryFee" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>