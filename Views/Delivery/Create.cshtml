@using Mailoo.Data.Enums
@using Mailoo.Models
@model Delivery

@{
    ViewData["Title"] = "Create Delivery";
}

<h1>Create Delivery</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <select asp-for="Name" class="form-control" asp-items="Html.GetEnumSelectList<Governorate>()"></select>
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryFee" class="control-label"></label>
        <input asp-for="DeliveryFee" class="form-control" />
        <span asp-validation-for="DeliveryFee" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>